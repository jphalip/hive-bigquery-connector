<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.google.cloud.hive</groupId>
        <artifactId>shaded-hive-parent</artifactId>
        <version>${revision}</version>
        <relativePath>../shaded-hive-parent</relativePath>
    </parent>

    <artifactId>shaded-hive2.3.9-hadoop2.10</artifactId>
    <version>${revision}</version>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <properties>
        <hadoop.version>2.10.2</hadoop.version>
        <hive.version>2.3.9</hive.version>
        <tez.version>0.9.2</tez.version>
        <gcs-connector.version>hadoop2-2.2.14</gcs-connector.version>

        <shade.skip>false</shade.skip>
        <attach.shaded.jar>true</attach.shaded.jar>
    </properties>

    <dependencies>

        <!-- Test dependencies -->

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>hive-2-bigquery-connector</artifactId>
            <version>${revision}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>shaded-sparksql</artifactId>
            <version>${project.version}</version>
            <classifier>shaded</classifier>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>${maven-failsafe-plugin.version}</version>
                <configuration>
                    <!-- Exclude the unshaded compile-time dependencies during integration tests -->
                    <classpathDependencyScopeExclude>provided</classpathDependencyScopeExclude>
<!--                    <classpathDependencyExcludes>-->
<!--                        <classpathDependencyExclude>com.google.guava:guava</classpathDependencyExclude>-->
<!--                    </classpathDependencyExcludes>-->

                    <additionalClasspathElements>
                        <additionalClasspathElement>${project.build.directory}/${project.build.finalName}-shaded.jar</additionalClasspathElement>
                    </additionalClasspathElements>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
